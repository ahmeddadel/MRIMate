<resources>
    <!-- Base application theme. -->
    <style name="Theme.MRIMate" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:colorBackground">@color/cultured_background</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!-- Host Activity theme. -->
    <style name="Theme.MRIMate.Host" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:colorBackground">@color/cultured_background</item>
        <item name="actionBarSize">48dip</item>
        <item name="android:actionBarSize">48dip</item>
    </style>
</resources>